<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Jersey"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/fab_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name" />
    <EditText
        android:id="@+id/edit_name_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Player Name"
        android:inputType="textCapCharacters" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number" />
    <EditText
        android:id="@+id/edit_number_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Player Number"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/purple_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Purple"
            android:textOn="Green"
            android:text="@string/button_initial_text"
            android:textColor="@color/design_default_color_primary_dark"
            android:onClick="handlePurpleJersey"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Click button to change colour" />

    </LinearLayout>


</LinearLayout>